<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:map="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/locationPickerFAB"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/colorPrimary"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:clickable="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/confirmLocationsFAB"
        android:src="@drawable/ic_confirm"
        app:backgroundTint="@color/colorAccent"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:clickable="true"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/locationPickerFAB"
        android:layout_alignStart="@+id/locationPickerFAB" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/map"
        tools:context="com.goodenoughapps.rally.MainActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scrollView2" />

    <com.goodenoughapps.rally.views.ScrollViewWithMaxHeight
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:id="@+id/scrollView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:id="@+id/placesListLinearLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/listBackground"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="8dp">

        </LinearLayout>
    </com.goodenoughapps.rally.views.ScrollViewWithMaxHeight>


</RelativeLayout>